config REGULATOR_TPS55287Q1
    bool "TI TPS55287-Q1 buck-boost regulator"
    depends on DT_HAS_TI_TPS55287Q1_ENABLED && I2C && REGULATOR
    help
      Enable support for the TI TPS55287-Q1 36-V, 4-A synchronous
      buck-boost converter with I2C interface, exposed as a regulator
      using the Zephyr regulator API.
    
config REGULATOR_TPS55287Q1_INIT_PRIORITY
    int "TPS55287-Q1 init priority"
    depends on REGULATOR_TPS55287Q1
    default 70
    help
      Initialization priority for TPS55287-Q1 regulator driver.

config REGULATOR_TPS55287Q1_LOG_LEVEL
    int "TPS55287Q1 driver log level"
    depends on REGULATOR_TPS55287Q1
    default 3
    range 0 4
    help
      Set log level for TPS55287-Q1 regulator driver.
      0 = OFF
      1 = ERROR
      2 = WARNING
      3 = INFO
      4 = DEBUG